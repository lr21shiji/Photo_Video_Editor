<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/black"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShareImageActivity">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_back"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/image_view_image"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/dieu_anh_biet"
            android:layout_width="60dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/image_view_home"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="10dp"
                    android:background="@drawable/custom_image_view_background"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_baseline_check"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:textColor="@color/white"
                    android:text="Saved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_share"
                    android:padding="10dp"
                    android:background="@drawable/custom_image_view_background"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_baseline_share"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:textColor="@color/white"
                    android:text="Share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_messenger"
                    android:padding="15dp"
                    android:background="@drawable/messenger"
                    android:layout_margin="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:textColor="@color/white"
                    android:text="Messenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_email"
                    android:padding="15dp"
                    android:background="@drawable/email"
                    android:layout_margin="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:textColor="@color/white"
                    android:text="Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_whatsapp"
                    android:padding="15dp"
                    android:background="@drawable/whatsapp"
                    android:layout_margin="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:textColor="@color/white"
                    android:text="WhatsApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_instagram"
                    android:padding="15dp"
                    android:background="@drawable/instagram"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_baseline_share"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:textColor="@color/white"
                    android:text="Instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_facebook"
                    android:padding="15dp"
                    android:background="@drawable/facebook"
                    android:layout_margin="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:textColor="@color/white"
                    android:text="Facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_twitter"
                    android:padding="15dp"
                    android:background="@drawable/twitter"
                    android:layout_margin="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:textColor="@color/white"
                    android:text="Twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:background="#E3E1E1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>