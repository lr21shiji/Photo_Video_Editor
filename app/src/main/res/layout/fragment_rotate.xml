<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_image"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="450dp"/>

    <RelativeLayout
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_clear"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_clear_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="Rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/image_view_check"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_check_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/text_view_display"
            android:layout_below="@id/image_view_check"
            android:textColor="@color/teal_200"
            android:textSize="14sp"
            android:text="0"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <SeekBar
            android:min="0"
            android:id="@+id/seek_bar_control"
            android:layout_below="@id/text_view_display"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <LinearLayout
                android:padding="15dp"
                android:layout_below="@id/seek_bar_control"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_flip"
                    android:src="@drawable/ic_baseline_flip"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/image_view_rotate_with_radius"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_signal_cellular_0_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/image_view_rotate"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_replay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/image_view_scale"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_open_in_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

    </RelativeLayout>

</RelativeLayout>